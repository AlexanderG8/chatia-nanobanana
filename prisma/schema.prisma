// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model User {
  id              String           @id @default(uuid())
  username        String           @unique
  email           String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Relaciones
  savedGames      SavedGame[]
  unlockedEndings UnlockedEnding[]

  @@map("users")
}

// Modelo de Partida Guardada
model SavedGame {
  id            String    @id @default(uuid())
  userId        String
  name          String
  turnNumber    Int       @default(0)
  survivalTime  Int       @default(0)
  thumbnail     String?   @db.Text
  isAutoSave    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relaciones
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      GameMessage[]
  inventory     Inventory?
  statistics    GameStatistics?

  @@index([userId])
  @@index([userId, isAutoSave])
  @@map("saved_games")
}

// Modelo de Mensajes del Juego
model GameMessage {
  id           String    @id @default(uuid())
  savedGameId  String
  role         String    // "user" o "assistant"
  content      String    @db.Text
  imageUrl     String?   @db.Text
  items        Json?     // Array de items encontrados
  order        Int       // Orden del mensaje en la conversación

  // Relaciones
  savedGame    SavedGame @relation(fields: [savedGameId], references: [id], onDelete: Cascade)

  @@index([savedGameId])
  @@index([savedGameId, order])
  @@map("game_messages")
}

// Modelo de Inventario
model Inventory {
  id           String    @id @default(uuid())
  savedGameId  String    @unique
  items        Json      // Array de InventoryItem

  // Relaciones
  savedGame    SavedGame @relation(fields: [savedGameId], references: [id], onDelete: Cascade)

  @@map("inventories")
}

// Modelo de Estadísticas del Juego
model GameStatistics {
  id                 String    @id @default(uuid())
  savedGameId        String    @unique
  decisionsCount     Int       @default(0)
  combatActions      Int       @default(0)
  explorationActions Int       @default(0)
  socialActions      Int       @default(0)
  itemsUsed          Int       @default(0)
  turnsPlayed        Int       @default(0)
  startTime          DateTime  @default(now())
  survivalTime       Int       @default(0)

  // Relaciones
  savedGame          SavedGame @relation(fields: [savedGameId], references: [id], onDelete: Cascade)

  @@map("game_statistics")
}

// Modelo de Finales Desbloqueados
model UnlockedEnding {
  id         String   @id @default(uuid())
  userId     String
  endingId   String
  achievedAt DateTime @default(now())

  // Relaciones
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, endingId])
  @@index([userId])
  @@map("unlocked_endings")
}
